#!/bin/sh
source '.dotfiles/sources/.messages'

# Setup Brew and Cask apps ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::

# Brew ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
echo_arrow "Setting up Homebrew"
if test ! $(which brew); then
  echo_installing "Installing homebrew"
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
else
  echo_check "Homebrew already instaled"
  echo_update "Updating Homebrew"
  brew update
fi

# Brew tap ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
echo_arrow "Tapping repos with brew"
taps=(
  "homebrew/cask-fonts"
  "homebrew/cask-drivers"
  "mongodb/brew"
)

for tap in "${taps[@]}"; do
  echo_default "Tapping $tap"
  brew tap $tap
done

# Brew apps :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
echo_arrow "Installing apps with brew"
brew=(
  "mas"
  "nvm"
  "golang"
  "composer"
  "thefuck"
  "gotop"
  "fx --ignore-dependencies"
  "git"
  "hub"
  "cmatrix"
  "zsh"
  "z"
  "httpie"
  "telnet"
  "imagemagick"
  "tree"
  "zsh-autosuggestions"
  "neofetch"
  "pyenv"
  "gh"
  "mongodb-community"
)

# Custom configuration for brew apps ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
mas_configuration() {
  mas_apps=(
    # "Irvue"
    # Adobe Lightroom
    "1451544217"
    # Unsplash Wallpapers
    "1284863847"
    # Trello
    "1278508951"
  )

  for app in "${mas_apps[@]}"; do
    echo_installing $app
    mas lucky $app
  done
}

check_extra_configurations() {
  echo_installing "Checking extra configuration for $1"

  case $1 in
      "mas")
        mas_configuration
      ;;
      *)
        echo_default "No extra configuration for $app"
      ;;
  esac
}

# Install brew apps and check for extra configuration :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
for app in "${brew[@]}"; do
  echo_installing "Installing $app"
  brew install $app

  check_extra_configurations $app
  echo_installed "$app installed"
done

#  Brew Cask ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
echo_arrow "Installing apps with brew cask"
brew cask

#  Brew Cask apps :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
cask=(
  "visual-studio-code"
  "iterm2"
  "gitkraken"
  "docker"
  "sequel-pro"
  "mysqlworkbench"
  "google-chrome"
  "insomnia"
  "postman"
  "firefox"
  "spotify"
  "stremio"
  "slack"
  "skype"
  "coconutbattery"
  "1password"
  "android-file-transfer"
  "cyberduck"
  "geekbench"
  "ngrok"
  "font-fira-code"
  "discord"
  "zoomus"
  "displaylink"
  "obinskit"
  "logitech-camera-settings"
  "kindle"
  "notion"
  "wireshark"
  "rectangle"
  "mongodb-compass"
)

for app in "${cask[@]}"; do
  echo_installing "Installing $app"
  brew install --cask $app
done
